{
  "name": "hexagonal-architecture-api",
  "version": "1.0.0",
  "description": "A lightweight API implemented using Hexagonal Architecture, without relying on HTTP frameworks.",
  "scripts": {
    "test": "vitest run --globals",
    "test:unit": "vitest run --globals src/application/domain",
    "test:integration": "vitest run --globals test/integration",
    "test:lib": "vitest run --globals src/http/lib",
    "test:e2e": "vitest run --globals src/http/controllers",
    "dev": "tsx src/http/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/http/server.js"
  },
  "keywords": [],
  "author": "Samuel Laurindo",
  "license": "MIT",
  "private": "true",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.10",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.6",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2"
  }
}
